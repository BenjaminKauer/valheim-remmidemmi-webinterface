{
    "compilerOptions": {
        "experimentalDecorators": true,
        "outDir": "bin",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "strict": true,
        "target": "es6",
        "lib": [
            "es2017",
            "dom",
            "ES2020.String"
        ],
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "ui/"
    ]
}